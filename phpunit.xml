<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/12.0/phpunit.xsd"
         bootstrap="test/bootstrap.php"
         colors="true"
         stopOnFailure="false">

    <testsuites>
        <testsuite name="Application Tests">
            <!-- Nur Dateien mit dem Suffix "Test.php" im "test/" Verzeichnis und den Plugin-Verzeichnissen -->
            <directory suffix="Test.php">test</directory>
            <directory suffix="Test.php">plugin/*/test</directory> <!-- Plugin-spezifische Tests -->
        </testsuite>
    </testsuites>

    <source>
        <include>
            <directory suffix=".php">src</directory>
            <directory suffix=".php">plugin/*/src</directory> <!-- FÃ¼r die Plugin-Quellcodes -->
        </include>
    </source>

